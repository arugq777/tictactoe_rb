%html
  %head
    %title
      tictactoe
    %script{:type=>"text/javascript", :src=>"./js/jquery-2.0.3.min.js"}
    %script{:type=>"text/javascript", :src=>"./js/app.js"}
    %link{:type=>"text/css", :rel=>"stylesheet", :href=>"./css/style.css"}
  %body
    %header
    %aside
      #loading
        Please wait....
      %ul#info
    %section{:class => "board"}
      %table
        - 3.times do |i|
          %tr{:id => "row#{i+1}"}
            - 3.times do |j|
              %td{:id => "#{(j+1)+(i*3)}", :class=>"space"}
    %footer